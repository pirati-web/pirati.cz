{% capture tags %}
  {% for tag in site.tags %}
    {{ tag[0] }}
  {% endfor %}
	{% for team in site.teams %}
		{{ team.tags }}
	{% endfor %}
{% endcapture %}
{% assign sortedtags = tags | split:' ' | uniq | sort %}

[
  {
  {% for tag in sortedtags %}
  {% assign posts = site.posts | where_exp: "item", "item.tags contains tag" %}
  {% assign teams = site.teams | where_exp: "item", "item.tags contains tag" %}
  "{{ tag }}":  [
    {% for post in posts %}
      {
        "title"   : "{{post.title}}",
        "excerpt" : "{{post.excerpt | strip_html | strip_newlines | remove:  "	" | escape | remove: "\"}}",
        "url"     : "{{post.url | relative_path}}"
      }
      {% unless forloop.last %},{% endunless %}
    {% endfor %}
    {% if teams.size > 0 %}{% if posts.size > 0%},{% endif %}{% endif %}
    {% for team in teams %}
      {
        "uid"    : "{{team.uid}}",
        "title"  : "TÃ½m: {{team.title}}",
        "excerpt": "{{team.excerpt | strip_html | strip_newlines | remove:  "	" | escape | remove: "\"}}",
        "url"    : "{{team.url | relative_path}}"
      }
      {% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]{% unless forloop.last %},{% endunless %}
  {% endfor %}
  }
]
